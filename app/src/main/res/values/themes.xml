<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pyatnaski" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="mainBackgroundColor">@color/background_main_light</item>
        <item name="tileBackgroundColor">@color/light_background</item>
        <item name="tileStrokeColor">@color/orange_tile_stroke</item>
        <item name="tileTextColor">@color/button_orange_text_light</item>
        <item name="buttonTextColor">@color/button_orange_text_light</item>
        <item name="secondaryTextColor">@color/time_steps_text</item>
        <item name="dialogBackgroundColor">@color/light_background</item>
        <item name="dialogTextColor">@color/black</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_main_light</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Pyatnaski</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_fade_in</item>
        <item name="android:windowExitAnimation">@anim/scale_fade_out</item>
    </style>
    <style name="OrangeFocusedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange_tile_stroke</item>
        <item name="hintTextColor">@color/orange_tile_stroke</item>
        <item name="startIconTint">@color/orange_tile_stroke</item>
        <item name="endIconTint">@color/orange_tile_stroke</item>
    </style>
</resources>